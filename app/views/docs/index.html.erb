<div class="wrapper_with_padding">
  <div id="clearfix">
    <% unless @docs.blank? %>
      <% @docs.each do |doc| %>
      <div class="doc">
        <p class="title">
          <%= link_to doc.title, doc %>
        </p>
        <p class="date"> <%= time_ago_in_words(doc.created_at) %></p>
        <p class="content"> <%= truncate(doc.context, length:50) %></p>
      </div>
      <% end %>
    <% else %>
      <h2>Create Doc</h2>
      <p>Start creating documents</p>
    <% end %>
    <%= link_to 'Create Doc', new_doc_path %>

  </div>
</div>
